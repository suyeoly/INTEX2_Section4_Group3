<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - INTEX2_Section4_Group3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/INTEX2_Section4_Group3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm">
            <div class="container-fluid">
                <a href="/">
                    <img src="/lib/img/AuroraLogo.jpg" alt="Home" height="80">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Shop">SHOP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="About">ABOUT</a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-action="Cart">🛒</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (!Context.Request.Cookies.ContainsKey("CookieConsent"))
    {
        <div id="cookieConsentBanner" class="alert alert-info text-center" role="alert">
            This site uses cookies to offer you a better browsing experience.
            <button onclick="hideCookieBanner()" class="btn btn-primary btn-sm">I understand</button>
        </div>

        <script>
            function hideCookieBanner() {
                document.getElementById('cookieConsentBanner').style.display = 'none';
                document.cookie = "CookieConsent=true; path=/";
            }
        </script>
    }

    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <p>&copy; 2024 AuroraBricks, Inc. All Rights Reserved.</p>
        <a asp-area="" asp-controller="Home" asp-action="Privacy">View Privacy Policy</a>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
